<div class = "home">
    <h1 class = "home_heading">Heritage Gazette</h1>
    <p class = "home_body">Bloging Page For BVHS </p>
</div>

<img src = "/" alt="Backgroung picture" class="hero-image" width="981" height="528">

<section class ="articles">
    <h2 class = "articles_heading">Latest Posts</h2>

    <ul class = "article-ul">
        <li>

            <% data.forEach(post => { %>
             
            
            <a href="/post/<%= post.id  %>">
                <span><%= post.title  %></span>
                <span class="article-list_date"><%= post.createdAt.toDateString()  %></span>
            </a>
        </li>
        <% }) %>


    </ul>

    <% if (nextPage !== null) { %>
     <a href = "/?page=<%= nextPage %>" class = "pagination">&lt; View Older Posts</a>
    <% } %>
     


    
</section>